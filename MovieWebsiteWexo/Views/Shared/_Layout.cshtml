<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieWebsiteWexo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieWebsiteWexo.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="@ViewData["BodyClass"]">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm"
             style="background: linear-gradient(to bottom, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
            z-index: 1000;
            height: 60px;
            position: absolute;
            top: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 100%;
            box-shadow: none;
            border-bottom: none;">
            <div class="container-fluid">
                <!-- Logo as Text -->
                <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="font-size: 2rem; font-family: Arial Narrow, sans-serif; font-weight: bold; color: white; letter-spacing: 1px; white-space: nowrap; margin-left: 25px;">
                    <span style="font-size: 2.0rem; opacity: 0.7;">MOVIE</span>
                </a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movie" asp-action="Index" style="font-size: 1.3rem; font-family: Arial Narrow, sans-serif; opacity: 0.7;">DISCOVER</a>
                        </li>
                        <li class="nav-item" style="margin-right: 25px;">
                            <a class="nav-link text-light" asp-area="" asp-controller="Movie" asp-action="WishList" style="font-size: 1.3rem; font-family: Arial Narrow, sans-serif; opacity: 0.7;">WISH LIST</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3" style="@(ViewData["BodyClass"]?.ToString() == "index-page" ? "padding-top: 0;" : "padding-top: 80px;")">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MovieWebsiteWexo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
